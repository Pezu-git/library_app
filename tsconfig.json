{
  "compilerOptions": {
    "target": "es2016",   
    "lib": ["es6", "dom"],  
    "types": ["reflect-metadata", "node"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext", 
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                          
    "strictNullChecks": false,   
    "skipLibCheck": true      
  }
}
