<!-- Информация по конкретной книге -->
<%- include('../port/layout_start')%>
<link rel="stylesheet" href="/css/style.css">
<!-- <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script> -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js"></script>
<title>Book info</title>

</head>
<body>
  <div class="container updt_container">
    <div class="view_btns_container">
      <div class="home_btn_container">
        <div class="home_btn">
          <a class="btn btn-primary book_info_update" type="submit" href="/">
            <i class="fa fa-home" aria-hidden="true"></i>
          </a>
        </div>
        <div class="file_download_btn">
          <a class="btn btn-info book_info_update" type="submit" href="/<%= book.id %>/download">
            <i class="fa fa-download" aria-hidden="true"></i>
          </a>
        </div>
      </div>
      <div class="updt_btn">
        <a class="btn btn-warning book_info_update" type="submit" href="/update/<%= book.id %>">Редактировать</a>
      </div>
    </div>
    <div class="book_info" id="<%= book.id %>">
      <div class="book_info_cover">
        <img src="/img/<%= book.fileCover %>" alt="cover" class="lib_item_img" width="100px">
      </div>
     
        <div class="lib_item_desc_container">
          <table class="table table-sm">
            <tbody>
              <tr>
                <th class="info_th" scope="row">Автор!</th>
                <td class="info_td"><%= book.author %></td>
              </tr>
              <tr>
                <th class="info_th" scope="row">Название</th>
                <td class="info_td"><%= book.title %></td>
              </tr>
              <tr>
                <th class="info_th" scope="row">Издательство</th>
                <td class="info_td"><%= book.publishing %></td>
              </tr>
              <tr>
                <th class="info_th" scope="row">Кол-во страниц</th>
                <td class="info_td"><%= book.count %></td>
              </tr>
            </tbody>
          </table>
        </div> 
      </div>
      <div class="book_description lib_item_text">
        <div class="btn btn-sm btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i>
            <span><%= cnt %></span>
        </div>
              <div class="info_header lib_item_text">
                Описание
              </div>  
              <div class="info_body_description">
                <%= book.description %>
              </div>
            </div>
      </div>
  </div>
 

  <body>
    <div class="container">
      <div class="row">
        <div class="col-4">
          <div id="list" class="list-group">
            <% chat.map((item, idx) => { %>
              <div class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <small><%= item.sender %></small>
                </div>
                <p class="mb-1"><%= item.message %></p>
            </div>
              <% }) %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-4">
          <div class="form-group">
            <label for="username">username</label>
            <input
              placeholder="username"
              type="text"
              id="username"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="text">message</label>
            <textarea
              placeholder="message"
              class="form-control"
              id="text"
            ></textarea>
          </div>
          <!-- <button type="submit" id="send-all" class="btn btn-primary">
            all
          </button> -->
          <!-- <button type="submit" id="send-me" class="btn btn-primary">me</button> -->
          <button type="submit" id="send-room" class="btn btn-primary">
            send
          </button>
        </div>
      </div>
    </div>
  <script src="/js/roomSockets.js"></script>
  <script>



  </script>
</body>
</html>